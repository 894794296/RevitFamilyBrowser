<UserControl x:Class="RevitFamilyBrowser.WPF_Classes.GridSetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitFamilyBrowser.WPF_Classes"
             mc:Ignorable="d" Width="915" Height="725">
    <Grid>
        <Button x:Name="buttonInsert" 
                Content="Insert" 
                Width="120" 
                Height="30" 
                HorizontalAlignment="Left" 
                Margin="56,347,0,348" 
                Click="ButtonInsertClick"
                FontSize="16" 
                Background="SteelBlue"
                BorderBrush="DarkSlateBlue"
                Foreground="White"/>

        <Canvas x:Name="canvas" 
                HorizontalAlignment="Left" 
                Height="600" Margin="275,40,0,0" 
                VerticalAlignment="Top" 
                Width="600" 
                Background="White">

            <Canvas.BitmapEffect>
                <DropShadowBitmapEffect Color="DarkGray" />
            </Canvas.BitmapEffect>
        </Canvas>

        <Grid Height="725" VerticalAlignment="Bottom">

            <Label x:Name="labelHorizontal" 
                   Content="Set Axes Number" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Height="32" Width="133" 
                   FontSize="16" 
                   Margin="50,52,0,0"/>

            <TextBox x:Name="textBoxHorizontal" 
                     FontSize="16" HorizontalAlignment="Left" 
                     Height="30" Margin="86,84,0,0" 
                     TextWrapping="Wrap" Text="1" 
                     VerticalAlignment="Top" 
                     Width="62" 
                     BorderBrush="DarkSlateBlue"
                     HorizontalContentAlignment="Center" 
                     VerticalContentAlignment="Center" />

            <TextBox x:Name="textBoxSymbol"
                     FontSize="16" HorizontalAlignment="Left"
                     VerticalAlignment="Center"
                     Height="30" Margin="275,5,0,690"
                     Width="600"
                     Background="SteelBlue"
                     Foreground="White"
                     BorderBrush="DarkSlateBlue"
                     >
            </TextBox>
            <Button x:Name="buttonAddHorizontal" 
                    FontSize="16" 
                    Content="+" 
                    HorizontalAlignment="Left" 
                    Margin="147,84,0,0" 
                    VerticalAlignment="Top" 
                    VerticalContentAlignment="Center"
                    Width="30" Height="30" 
                    Background="SteelBlue"
                    BorderBrush="DarkSlateBlue"
                    Foreground="White"
                    Click="buttonAddHorizontal_Click"/>

            <Button x:Name="buttonRemoveHorizontal"  
                    FontSize="16" Content="-" 
                    HorizontalAlignment="Left" 
                    Margin="57,84,0,0" 
                    VerticalAlignment="Top" 
                    Width="30" Height="30" 
                    Background="SteelBlue"
                    BorderBrush="DarkSlateBlue"
                    Foreground="White"
                    VerticalContentAlignment="Center"
                    Click="buttonRemoveHorizontal_Click"
                    />

            <Button x:Name="buttonReset" 
                    Content="Reset grid" 
                    FontSize="16" 
                    Width="Auto" 
                    Height="Auto" 
                    Margin="57,200,738,495" 
                    Click="buttonReset_Click" 
                    Background="SteelBlue"
                    BorderBrush="DarkSlateBlue"
                    Foreground="White"/>


            <RadioButton GroupName ="SplitOption" 
                         x:Name="radioEqual" 
                         Content="Equal" 
                          FontSize="16" 
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Top" 
                         Margin="57,146,0,0" VerticalContentAlignment="Center"/>

            <RadioButton GroupName ="SplitOption" 
                         x:Name="radioProportoinal" 
                         Content="Proportional" 
                         FontSize="16" 
                         HorizontalAlignment="Left" 
                         VerticalAlignment="Top" 
                         Margin="57,166,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        </Grid>
        <TextBox x:Name="textBox" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="745,80,0,0" 
                 TextWrapping="Wrap" 
                 Text="TextBox" 
                 VerticalAlignment="Top" 
                 Width="120"                              
                 Background="SteelBlue"
                 Foreground="White"
                 FontSize="16"
                 BorderBrush="DarkSlateBlue"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"/>

        <TextBox x:Name="textBoxQuantity" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="745,124,0,0" 
                 TextWrapping="Wrap" 
                 Text="TextBox" 
                 VerticalAlignment="Top" 
                 Width="120"                              
                 Background="SteelBlue"
                 Foreground="White"
                 FontSize="16"
                 BorderBrush="DarkSlateBlue"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"/>


    </Grid>
</UserControl>
